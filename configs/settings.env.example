# JusticeGraph Environment Configuration
# Copy this file to settings.env and fill in your values

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL (Production)
DATABASE_URL=postgresql://username:password@localhost:5432/justicegraph

# SQLite (Development/Testing)
# DATABASE_URL=sqlite:///justicegraph.db

# MongoDB (Alternative)
# MONGODB_URI=mongodb://localhost:27017/justicegraph

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to file and console
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# JSON formatted logs
JSON_LOGS=true

# ============================================
# SCRAPING CONFIGURATION
# ============================================

# HTTP request timeout in seconds
REQUEST_TIMEOUT=60

# Number of retry attempts for failed requests
RETRY_ATTEMPTS=3

# Delay between requests (seconds) - be respectful!
RATE_LIMIT_DELAY=2.0

# Verify SSL certificates
VERIFY_SSL=true

# User agent string
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ============================================
# PREFECT CONFIGURATION (Workflow Orchestration)
# ============================================

# Prefect API URL (if using Prefect Cloud)
# PREFECT_API_URL=https://api.prefect.cloud/api/accounts/[ACCOUNT_ID]/workspaces/[WORKSPACE_ID]

# Prefect API key (if using Prefect Cloud)
# PREFECT_API_KEY=your_api_key_here

# ============================================
# APPLICATION SETTINGS
# ============================================

# Project root directory (auto-detected if not set)
# PROJECT_ROOT=/path/to/justicegraph

# Data directories
DATA_DIR=data
BRONZE_DIR=data/bronze
SILVER_DIR=data/silver
GOLD_DIR=data/gold

# Enable debug mode (more verbose logging)
DEBUG=false

# ============================================
# DATA SOURCE CREDENTIALS (if needed)
# ============================================

# If any data sources require authentication, add credentials here
# ECOURTS_API_KEY=your_api_key_here
# NJDG_USERNAME=your_username
# NJDG_PASSWORD=your_password

# ============================================
# EMAIL NOTIFICATIONS (Optional)
# ============================================

# SMTP settings for pipeline notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=recipient@example.com

# ============================================
# SECURITY
# ============================================

# Secret key for encryption (if needed)
# SECRET_KEY=generate_a_random_secret_key_here

# ============================================
# PERFORMANCE
# ============================================

# Number of parallel workers for scraping
MAX_WORKERS=5

# Database connection pool size
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ============================================
# NOTES
# ============================================

# 1. Never commit this file with real credentials to version control
# 2. Use strong passwords for production databases
# 3. Respect rate limits and robots.txt of data sources
# 4. Ensure compliance with data protection regulations
